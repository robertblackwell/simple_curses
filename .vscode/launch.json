    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "new",
            "type": "python",
            "request": "launch",
            "stopOnEntry" :true,
            "program": "new.py",
            "console": "integratedTerminal"
        },        
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "test string buffer",
            "type": "python",
            "request": "launch",
            "stopOnEntry" :true,
            "program": "${workspaceFolder}/tests/test_string_buffer.py",
            "cwd": "${workspaceFolder}/tests",
            "env": {"PYTHONPATH": "${workspaceFolder}/simple_curses:${workspaceFolder}: ${PYTHONPATH}"},
            "args": [],
            "console": "integratedTerminal"
        },

    ]
}